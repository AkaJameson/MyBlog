@page "/"
@using MyBlog.Web.Client.Shared
@inherits IndexBase
@layout FrontView
<Navbar />

<div class="hero-section">
    <div class="hero-content">
        <h1>探索技术与思想的交汇点</h1>
        <p>一个专注于技术分享与生活感悟的博客空间</p>
        <a href="/articles" class="hero-button">浏览文章</a>
    </div>
</div>

<div class="container">
    @if (isLoading)
    {
        <div class="loading">加载中...</div>
    }
    else
    {
        <div class="section-header">
            <h2>最新文章</h2>
            <a href="/articles">查看全部</a>
        </div>
        
        <div class="articles-grid">
            @foreach (var article in latestArticles)
            {
                <ArticleCard Article="article" />
            }
        </div>
        
        <div class="section-header">
            <h2>最新碎碎念</h2>
            <a href="/thoughts">查看全部</a>
        </div>
        
        <div class="thoughts-list">
            @foreach (var thought in latestThoughts)
            {
                <div class="thought-item">
                    <div class="thought-content">@thought.Content</div>
                    <div class="thought-time">@thought.PublishTime</div>
                </div>
            }
        </div>
        
        <div class="section-header">
            <h2>分类导航</h2>
        </div>
        
        <div class="categories-grid">
            @foreach (var category in categories)
            {
                <a href="/articles?category=@category.Id" class="category-card">
                    <div class="category-icon">
                        <i class="fas fa-folder"></i>
                    </div>
                    <div class="category-name">@category.CategoryName</div>
                    @* <div class="article-count">@category. 篇文章</div> *@
                </a>
            }
        </div>
    }
</div>

<MyBlog.Web.Client.Shared.Footer/>
