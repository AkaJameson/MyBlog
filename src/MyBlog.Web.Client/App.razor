@using Microsoft.AspNetCore.Components.Authorization
<BootstrapBlazorRoot>
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(EmptyLayout)">
                <NotAuthorized>
                   <MyBlog.Web.Client.Components.NotFound404 Code="401" NotFoundMessage="未授权，禁止访问"></MyBlog.Web.Client.Components.NotFound404>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
                <LayoutView Layout="@typeof(EmptyLayout)">
                    <MyBlog.Web.Client.Components.NotFound404 Code="404" NotFoundMessage="未找到页面"></MyBlog.Web.Client.Components.NotFound404>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
</BootstrapBlazorRoot>
